license-file:        LICENSE
author:              Andrius Stankevičius
maintainer:          floppycat@gmail.com
-- copyright:
category:            Math
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Downhill.Linear.Expr,
                       Downhill.Linear.BackGrad,
                       Downhill.Linear.Graph,
                       Downhill.Linear.Lift,
                       Downhill.Linear.Prelude,
                       Downhill.Internal.Graph.Types,
                       Downhill.Internal.Graph.OpenMap,
                       Downhill.Internal.Graph.NodeMap,
                       Downhill.Internal.Graph.OpenGraph,
                       Downhill.Internal.Graph.Sharing,
                       Downhill.Internal.Graph.Graph,
                       Downhill.Grad,
                       Downhill.DVar
                       Downhill.BVar.Num,
                       Downhill.BVar.Prelude,
                       Downhill.BVar.Traversable
                       Downhill.TH
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.12.0.0 && <4.16,
                       vector-space,
                       containers, unordered-containers,
                       transformers,
                       reflection,
                       manifolds-core,
                       tagged,
                       template-haskell,
                       th-abstraction

  hs-source-dirs:      src
  other-modules:       Trace
  default-language:    Haskell2010
  ghc-options:         -Wall

test-suite downhill-test
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  other-modules:       Point, Record
  build-depends:       base, downhill, tasty, tasty-hunit
  hs-source-dirs:      test
  default-language:    Haskell2010
