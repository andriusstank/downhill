cabal-version:       2.4
-- Initial package description 'bp.cabal' generated by 'cabal init'.  For
-- further documentation, see http://haskell.org/cabal/users-guide/

name:                bp
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
license:             BSD-3-Clause
license-file:        LICENSE
author:              Andrius Stankevičius
maintainer:          floppycat@gmail.com
-- copyright:
category:            Math
extra-source-files:  CHANGELOG.md

library
  exposed-modules:     Expr,
                       Grad,
                       Sharing,
                       Tensor,
                       Graph,
                       NodeMap,
                       OpenGraph,
                       OpenMap,
                       Types,
                       Affine,
                       Diff,
                       Notensor,
                       EType,
                       Coolness,
                       BVar.Num
  -- other-modules:
  -- other-extensions:
  build-depends:       base >=4.12.0.0 && <4.14,
                       vector-space,
                       constraints,
                       containers, unordered-containers,
                       transformers,
                       reflection,
                       adjunctions,
                       data-fix

  hs-source-dirs:      src
  other-modules:       Trace
  default-language:    Haskell2010
  ghc-options:         -Wall

executable bp
  main-is:             Main.hs
  -- other-modules:
  -- other-extensions:
  build-depends:       base,
                       graphviz
  hs-source-dirs:      src
  default-language:    Haskell2010

executable hello
  main-is:             Hello.hs
  build-depends:       base, bp, vector-space
  hs-source-dirs:      samples
  default-language:    Haskell2010

executable higher
  main-is:             Higher.hs
  build-depends:       base, bp, vector-space
  hs-source-dirs:      samples
  default-language:    Haskell2010

test-suite bp-test
  type:                exitcode-stdio-1.0
  main-is:             Main.hs
  other-modules:       Point
  build-depends:       base, bp, tasty, tasty-hunit
  hs-source-dirs:      test
  default-language:    Haskell2010
